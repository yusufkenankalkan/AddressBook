@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
    // Layout = ""; Tema giydirdiğinizde layoutu değiştirebilirsiniz
}

<div class="row">

    <div class="col-12 col-md-6 offset-3 offset-3">
        <h4 class="text-center">Hoşgeldiniz...Bilgileri doldurup sisteme kayıt olabilirsiniz</h4>
        <form asp-controller="Account" asp-action="Register" method="post" >

            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="form-group">
                <label>İsim:</label>
                <input type="text" class="form-control" asp-for="FirstName" />
            </div>

            <div class="form-group">
                <label>Soyisim:</label>
                <input type="text" class="form-control" asp-for="LastName" />
            </div>

            <div class="form-group">
                <label>Kullanıcı Adı:</label>
                <input type="text" class="form-control" asp-for="Username" />
            </div>

            <div class="form-group">
                <label>Email:</label>
                <input type="text" class="form-control" asp-for="Email" />
            </div>

            <div class="form-group">
                <label>Telefon:</label>
                <input type="tel" class="form-control" asp-for="Phone" />
            </div>

            <div class="form-group">
                <label>Doğum Tarihi:</label>
                <input type="date" class="form-control" asp-for="Birthdate" />
            </div>

            <div class="form-group">
                <label>Şifre:</label>
                <input type="password" class="form-control" asp-for="Password" />
            </div>

            <div class="form-group">
                <label>Şifre Tekrar:</label>
                <input type="password" class="form-control" asp-for="PasswordConfirm" />
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-info">KAYDET</button>
            </div>
        </form>
    </div>
</div>


