@using AddressBookEL.ViewModels;

@{
    ViewData["Title"] = "AddAddress";
}

<div class="row">
    <form>
        <div class="row">
            <div class="col-md-6">
                <span  class="text-danger"
                      style="font-weight:bold;margin-right:3px;">
                *</span>
                <label>Adres Başlığı:</label>
                <input type="text" class="form-control"  required />
            </div>

            <div class="col-md-6">
                <span class="text-danger"
                      style="font-weight:bold;margin-right:3px;">
                    *
                </span>
                <label>İl:</label>
                <select id="cityselect" class="form-control" >
                    <option value="0">***İl Seçiniz***</option>
                    @foreach (var item in ViewBag.Cities as List<CityVM>)
                    {
                        <option value=@item.Id>@item.Name</option>
                    }
                </select>

            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <span class="text-danger"
                      style="font-weight:bold;margin-right:3px;">
                    *
                </span>
                <label>İlçe:</label>
                <select class="form-control" id="districtSelect" >
                    <option value="0" >***İlçe Seçiniz***</option>
                </select>
            </div>

            <div class="col-md-4">
                <span class="text-danger"
                      style="font-weight:bold;margin-right:3px;">
                    *
                </span>
                <label>Mahalle:</label>
                <select class="form-control" id="neighbourhoodSelect">
                    <option value="0">***Mahalle Seçiniz***</option>
                </select>
            </div>

            <div class="col-md-4">
                <label>Posta Kodu:</label>

            </div>


        </div>

    </form>

</div>

